<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HW2_University_Management_App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HW2_University_Management_App.Views.StudentDashboardView"
             x:DataType="vm:StudentDashboardViewModel">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <TextBlock Text="📚 Student Dashboard" FontSize="24" FontWeight="Bold" Foreground="DarkBlue" Margin="0,0,0,10"/>

            <!-- Enrolled Subjects -->
            <TextBlock Text="📝 Enrolled Subjects" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <Border BorderBrush="Gray" BorderThickness="0.4" Background="#F2F2F2" Padding="10" CornerRadius="10" Margin="5">
                <WrapPanel HorizontalAlignment="Stretch">
                    <ListBox ItemsSource="{Binding EnrolledSubjects}"
                             SelectedItem="{Binding SelectedEnrolledSubject}"
                             SelectionMode="Single"
                             Background="Transparent">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Stretch"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <ListBoxItem Background="{Binding BackgroundColor}"
                                             BorderBrush="Gray" BorderThickness="2"
                                             Margin="5" Width="180" Height="120"
                                             CornerRadius="10">
                                    <Grid>
                                        <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold"
                                                   Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Grid>
                                </ListBoxItem>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </WrapPanel>
            </Border>
            <Button Content="Drop Selected Subject" Command="{Binding DropSubjectCommand}" Click="OpenDialog" Margin="0,10,0,0"/>

            <!-- Available Subjects -->
            <TextBlock Text="📖 Available Subjects" FontSize="18" FontWeight="SemiBold" Margin="0,20,0,5"/>
            <Border BorderBrush="Gray" BorderThickness="0.3" Background="#F2F2F2" Padding="10" CornerRadius="10" Margin="5">
                <WrapPanel HorizontalAlignment="Stretch">
                    <ListBox ItemsSource="{Binding AvailableSubjects}"
                             SelectedItem="{Binding SelectedAvailableSubject}"
                             SelectionMode="Single"
                             Background="Transparent">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Stretch"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <ListBoxItem Background="{Binding BackgroundColor}"
                                             BorderBrush="Gray" BorderThickness="2"
                                             Margin="5" Width="180" Height="120"
                                             CornerRadius="10">
                                    <Grid>
                                        <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold"
                                                   Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Grid>
                                </ListBoxItem>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </WrapPanel>
            </Border>
            <Button Content="Enroll in Selected Subject" Command="{Binding EnrollInSubjectCommand}" Click="OpenDialog" Margin="0,10,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
