<UserControl
    x:Class="HW2_University_Management_App.Views.StudentDashboardView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:HW2_University_Management_App.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:StudentDashboardViewModel"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <TextBlock
                Margin="0,0,0,10"
                FontSize="24"
                FontWeight="Bold"
                Foreground="DarkBlue"
                Text="📚 Student Dashboard" />

            <!--  Enrolled Subjects  -->
            <TextBlock
                Margin="0,10,0,5"
                FontSize="18"
                FontWeight="SemiBold"
                Text="📝 Enrolled Subjects" />
            <Border
                Margin="5"
                Padding="10"
                Background="#F2F2F2"
                BorderBrush="Gray"
                BorderThickness="0.4"
                CornerRadius="10">
                <WrapPanel HorizontalAlignment="Stretch">
                    <ListBox
                        Background="Transparent"
                        ItemsSource="{Binding EnrolledSubjects}"
                        SelectedItem="{Binding SelectedEnrolledSubject}"
                        SelectionMode="Single">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Stretch" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <ListBoxItem
                                    Width="180"
                                    Height="120"
                                    Margin="5"
                                    Background="{Binding BackgroundColor}"
                                    BorderBrush="Gray"
                                    BorderThickness="2"
                                    CornerRadius="10">

                                    <ToolTip.Tip>
                                        <Border
                                            Padding="10"
                                            Background="White"
                                            CornerRadius="5">
                                            <TextBlock
                                                MaxWidth="300"
                                                Text="{Binding Description}"
                                                TextWrapping="Wrap" />
                                        </Border>
                                    </ToolTip.Tip>
                                    <Grid>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="Black"
                                            Text="{Binding Name}" />
                                    </Grid>
                                </ListBoxItem>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </WrapPanel>
            </Border>
            <Button
                Margin="0,10,0,0"
                Click="OpenDialog"
                Command="{Binding DropSubjectCommand}"
                Content="Drop Selected Subject" />

            <!--  Available Subjects  -->
            <TextBlock
                Margin="0,20,0,5"
                FontSize="18"
                FontWeight="SemiBold"
                Text="📖 Available Subjects" />
            <Border
                Margin="5"
                Padding="10"
                Background="#F2F2F2"
                BorderBrush="Gray"
                BorderThickness="0.3"
                CornerRadius="10">
                <WrapPanel HorizontalAlignment="Stretch">
                    <ListBox
                        Background="Transparent"
                        ItemsSource="{Binding AvailableSubjects}"
                        SelectedItem="{Binding SelectedAvailableSubject}"
                        SelectionMode="Single">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Stretch" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <ListBoxItem
                                    Width="180"
                                    Height="120"
                                    Margin="5"
                                    Background="{Binding BackgroundColor}"
                                    BorderBrush="Gray"
                                    BorderThickness="2"
                                    CornerRadius="10">

                                    <ToolTip.Tip>
                                        <Border
                                            Padding="10"
                                            Background="White"
                                            CornerRadius="5">
                                            <TextBlock
                                                MaxWidth="300"
                                                Text="{Binding Description}"
                                                TextWrapping="Wrap" />
                                        </Border>
                                    </ToolTip.Tip>

                                    <Grid>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="Black"
                                            Text="{Binding Name}" />
                                    </Grid>
                                </ListBoxItem>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </WrapPanel>
            </Border>
            <Button
                Margin="0,10,0,0"
                Click="OpenDialog"
                Command="{Binding EnrollInSubjectCommand}"
                Content="Enroll in Selected Subject" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
