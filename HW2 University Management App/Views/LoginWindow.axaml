<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:HW2_University_Management_App.ViewModels"
        mc:Ignorable="d"
        x:Class="HW2_University_Management_App.Views.LoginWindow"
        x:DataType="vm:LoginWindowViewModel"
        Width="400" Height="300"
        Title="Login">

    <Panel Height="300" Width="300">
        <Rectangle Fill="Green" Height="100" VerticalAlignment="Top"/>
        <Rectangle Fill="Green" Opacity="0.5" Width="100" HorizontalAlignment="Right" />
        <Rectangle Fill="Green" Opacity="0.5" Height="100" VerticalAlignment="Bottom"/>
        <Rectangle Fill="Orange" Width="100" HorizontalAlignment="Left"/>
    </Panel>
</Window>