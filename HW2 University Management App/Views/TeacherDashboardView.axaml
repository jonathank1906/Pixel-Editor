<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HW2_University_Management_App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HW2_University_Management_App.Views.TeacherDashboardView"
             x:DataType="vm:TeacherDashboardViewModel">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <TextBlock Text="ðŸ‘©â€ðŸ« Teacher Dashboard" FontSize="24" FontWeight="Bold" Foreground="DarkRed" Margin="0,0,0,10"/>

            <!-- Created Subjects -->
            <TextBlock Text="ðŸ“Œ Your Subjects" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <Border BorderBrush="Gray" BorderThickness="0.4" Padding="10" CornerRadius="10" Background="#F2F2F2" Margin="5">
                <WrapPanel HorizontalAlignment="Stretch">
                    <ListBox ItemsSource="{Binding CreatedSubjects}" 
                             SelectedItem="{Binding SelectedExistingSubject}"
                             SelectionMode="Single"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Stretch"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <ListBoxItem Background="{Binding BackgroundColor}"
                                             BorderBrush="Gray" BorderThickness="2"
                                             Margin="5" Width="180" Height="120"
                                             CornerRadius="10"
                                             Padding="0">
                                    
                                    <!-- ðŸ”¹ Apply Tooltip to the whole ListBoxItem -->
                                    <ToolTip.Tip>
                                        <Border Background="White" Padding="10" CornerRadius="5">
                                            <TextBlock Text="{Binding Description}" MaxWidth="300" TextWrapping="Wrap"/>
                                        </Border>
                                    </ToolTip.Tip>

                                    <Grid Width="180" Height="120"> <!-- Increased height for better spacing -->
                                        <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold"
                                                   Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Grid>
                                </ListBoxItem>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </WrapPanel>
            </Border>
            <Button Content="Delete Selected Subject" Command="{Binding DeleteSubjectCommand}" Margin="0,10,0,0"/>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
    <!-- Rounded background container with light grey color -->
    <Border Background="LightGray" CornerRadius="10" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
            <!-- Create New Subject -->
            <TextBlock Text="âž• Create a New Subject" FontSize="18" FontWeight="SemiBold" Margin="0,20,0,5" HorizontalAlignment="Center"/>

            <!-- Message Area -->
            <TextBlock Text="{Binding CreationMessage}" Foreground="Green" FontWeight="SemiBold" FontSize="12" Margin="0,10,0,0" HorizontalAlignment="Center"/>

            <!-- Textboxes for New Subject Name and Description -->
            <TextBox Text="{Binding NewSubjectName}" Watermark="Enter subject name" Width="250" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding NewSubjectDescription}" Watermark="Enter subject description" Width="250" Height="80" HorizontalAlignment="Center"/>

            <!-- Create Button -->
            <Button Content="Create" Command="{Binding CreateSubjectCommand}" Margin="0,5,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</Grid>

        </StackPanel>
    </ScrollViewer>
</UserControl>
