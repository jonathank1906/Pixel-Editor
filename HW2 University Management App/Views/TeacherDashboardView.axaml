<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HW2_University_Management_App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HW2_University_Management_App.Views.TeacherDashboardView"
             x:DataType="vm:TeacherDashboardViewModel">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <TextBlock Text="👩‍🏫 Teacher Dashboard" FontSize="24" FontWeight="Bold" Foreground="DarkRed" Margin="0,0,0,10"/>

            <!-- Created Subjects -->
            <TextBlock Text="📌 Your Subjects" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <Border BorderBrush="Gray" BorderThickness="0.4" Padding="10" CornerRadius="5">
                <WrapPanel HorizontalAlignment="Stretch">
                    <ListBox ItemsSource="{Binding CreatedSubjects}" 
                     SelectedItem="{Binding SelectedCreatedSubject}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Stretch"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Background="{Binding BackgroundColor}" 
                                        Padding="20" CornerRadius="5" 
                                        BorderBrush="Gray" BorderThickness="2" 
                                        Margin="5" Width="180" Height="80">
                                    <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" 
                                               Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ListBox>
                </WrapPanel>
            </Border>
            <Button Content="Delete Selected Subject" Command="{Binding DeleteSubjectCommand}" Click="OpenDialog" Margin="0,10,0,0"/>

            <!-- Create New Subject -->
            <TextBlock Text="➕ Create a New Subject" FontSize="18" FontWeight="SemiBold" Margin="0,20,0,5"/>
            <TextBox Text="{Binding NewSubjectName}" Width="250"/>
            <Button Content="Create" Command="{Binding CreateSubjectCommand}" Click="OpenDialog" Margin="0,5,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
