<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="HW2_University_Management_App.Views.DialogWindow"
          xmlns:vm="using:HW2_University_Management_App.ViewModels"
        Title="Notification"
        Width="300" Height="150"
         x:DataType="vm:DialogWindowViewModel"
         WindowStartupLocation="CenterScreen"
         CanResize="False">
         
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
    <TextBlock Text="{Binding Message}" FontSize="16" HorizontalAlignment="Center" Margin="10"/>
    <Button Content="OK" HorizontalAlignment="Center" Click="Confirm"/>
</StackPanel>

</Window>
