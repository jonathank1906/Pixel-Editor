<Window
    x:Class="HW3_Data_Visualization.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:HW3_Data_Visualization.Views"
    xmlns:vm="using:HW3_Data_Visualization.ViewModels"
    Title="Global Food Waste Dashboard"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    x:DataType="vm:MainWindowViewModel"
    Icon="/Assets/app-icon.ico"
    mc:Ignorable="d">

    <Grid ColumnDefinitions="250, *" RowDefinitions="*">

        <Border
            Grid.Column="0"
            Padding="20"
            Background="#008F8C"
            BorderThickness="0,0,1,0">

            <DockPanel LastChildFill="True">
                 <StackPanel DockPanel.Dock="Top" VerticalAlignment="Top">
                    <TextBlock Text="Preset Queries"
                    FontWeight="Bold"
                    FontSize="20"
                    Foreground="White"
                    Margin="0 0 0 20"/>

                    <Button
                        Margin="0,10"
                        HorizontalAlignment="Stretch"
                        Background="White"
                        Command="{Binding ShowHouseholdWasteCommand}"
                        Content="Household Waste"
                        FontWeight="SemiBold"
                        Foreground="#015958" />

                    <Button
                        Margin="0,10"
                        HorizontalAlignment="Stretch"
                        Background="White"
                        Command="{Binding ShowWasteByCountryCommand}"
                        Content="Waste by Country"
                        FontWeight="SemiBold"
                        Foreground="#015958" />

                    <Button
                        Margin="0,10"
                        HorizontalAlignment="Stretch"
                        Background="White"
                        Command="{Binding ShowYearlyWasteTrendCommand}"
                        Content="Yearly Waste Trend"
                        FontWeight="SemiBold"
                        Foreground="#015958" />

                    <Button
                        Margin="0,10"
                        HorizontalAlignment="Stretch"
                        Background="White"
                        Command="{Binding ShowFoodWasteCommand}"
                        Content="Food Waste"
                        FontWeight="SemiBold"
                        Foreground="#015958" />
                </StackPanel>

                <!--  Bottom: Footer  -->
                 <TextBlock Text="Powered by Genius Engineers"
                   DockPanel.Dock="Bottom"
                   Foreground="White"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0 30 0 0"
                   Opacity="0.7"/>
            </DockPanel>
        </Border>


        <!--  Dashboard  -->
        <ScrollViewer
            Grid.Column="1"
            Padding="20"
            Background="#2C3532">
            <ItemsControl ItemsSource="{Binding Charts}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:ChartView DataContext="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <!--  charts  -->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" Spacing="20" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

    </Grid>
</Window>
