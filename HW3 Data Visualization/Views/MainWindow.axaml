<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:HW3_Data_Visualization.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:HW3_Data_Visualization.Views"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="HW3_Data_Visualization.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Global Food Waste Dashboard">

    <Grid ColumnDefinitions="250, *" RowDefinitions="*">

        <Border Grid.Column="0"
        Background="#008F8C"
        Padding="20"
        BorderThickness="0 0 1 0">

    <DockPanel LastChildFill="True">

                <!-- Top part: Buttons -->
        <StackPanel DockPanel.Dock="Top" VerticalAlignment="Top">
            <TextBlock Text="Preset Queries"
                    FontWeight="Bold"
                    FontSize="20"
                    Foreground="White"
                    Margin="0 0 0 20"/>

            <StackPanel Width="200"> 
                <Button Content="Household Waste"
                        Margin="0 10"
                        Background="White"
                        Foreground="#015958"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Stretch"/>

                <Button Content="Waste by Country"
                        Margin="0 10"
                        Background="White"
                        Foreground="#015958"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Stretch"/>

                <Button Content="Yearly Waste Trend"
                        Margin="0 10"
                        Background="White"
                        Foreground="#015958"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Stretch"/>

                <Button Content="Food Waste"
                        Margin="0 10"
                        Background="White"
                        Foreground="#015958"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Stretch"/>
            </StackPanel>
        </StackPanel>

        <!-- Bottom: Footer -->
        <TextBlock Text="Powered by Genius Engineers"
                   DockPanel.Dock="Bottom"
                   Foreground="White"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0 30 0 0"
                   Opacity="0.7"/>
    </DockPanel>
</Border>


        <!-- Dashboard -->
        <ScrollViewer Grid.Column="1" Padding="20" Background="#2C3532">
            <ItemsControl ItemsSource="{Binding Charts}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:ChartView DataContext="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <!-- charts -->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" Spacing="20"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

    </Grid>
</Window>
