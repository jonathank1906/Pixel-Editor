<UserControl
    x:Class="HW3_Data_Visualization.Views.ChartView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:HW3_Data_Visualization.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:ChartViewModelBase"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <Border
                Padding="10"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="5">
                <StackPanel>
                    <DockPanel>
                        <TextBlock
                            Margin="0,0,10,0"
                            DockPanel.Dock="Left"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="{Binding Title}" />
                        <Button
                            HorizontalAlignment="Right"
                            Background="#FF4858"
                            Command="{Binding RemoveChartCommand}"
                            CommandParameter="{Binding}"
                            Content="Delete"
                            DockPanel.Dock="Right"
                            Foreground="White" />
                    </DockPanel>

                    <lvc:CartesianChart
                        Width="600"
                        Height="400"
                        CornerRadius="15"
                        Background="#FFCB9A"
                        Series="{Binding SeriesCollection}"
                        XAxes="{Binding XAxes}"
                        YAxes="{Binding YAxes}"
                        ZoomMode="Both" />
                </StackPanel>
            </Border>
            <TextBlock Height="100" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
