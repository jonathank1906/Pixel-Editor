<UserControl
    x:Class="HW2_University_Management_App.Views.TeacherDashboardView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
    xmlns:vm="using:HW2_University_Management_App.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:TeacherDashboardViewModel"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <StackPanel
                Margin="10"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="10">
                <TextBox
                    Width="200"
                    Height="30"
                    Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                    Watermark="Search for subjects..." />
                <Button
                    Width="40"
                    Height="40"
                    Command="{Binding SearchSubjectsCommand}"
                    Background="Transparent">
                    <Image
                        Width="40"
                        Height="40"
                        Source="{SvgImage Assets/Search-Icon.svg}" />
                </Button>
            </StackPanel>

            <TextBlock
                Margin="0,0,0,10"
                FontSize="24"
                FontWeight="Bold"
                Foreground="DarkRed"
                Text="ðŸ‘©â€ðŸ« Teacher Dashboard" />

            <!--  Created Subjects  -->
            <TextBlock
                Margin="0,10,0,5"
                FontSize="18"
                FontWeight="SemiBold"
                Text="ðŸ“Œ Your Subjects" />
            <Border
                Margin="5"
                Padding="10"
                Background="#F2F2F2"
                BorderBrush="Gray"
                BorderThickness="0.4"
                CornerRadius="10">
                <WrapPanel HorizontalAlignment="Stretch">
                    <ListBox
                        Background="Transparent"
                        BorderThickness="0"
                        ItemsSource="{Binding CreatedSubjects}"
                        SelectedItem="{Binding SelectedExistingSubject}"
                        SelectionMode="Single">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Stretch" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <ListBoxItem
                                    Width="180"
                                    Height="120"
                                    Margin="5"
                                    Padding="0"
                                    Background="{Binding BackgroundColor}"
                                    BorderBrush="Gray"
                                    BorderThickness="2"
                                    CornerRadius="10">

                                    <!--  ðŸ”¹ Apply Tooltip to the whole ListBoxItem  -->
                                    <ToolTip.Tip>
                                        <Border
                                            Padding="10"
                                            Background="White"
                                            CornerRadius="5">
                                            <TextBlock
                                                MaxWidth="300"
                                                Text="{Binding Description}"
                                                TextWrapping="Wrap" />
                                        </Border>
                                    </ToolTip.Tip>

                                    <Grid Width="180" Height="120">
                                        <!--  Increased height for better spacing  -->
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="Black"
                                            Text="{Binding Name}" />
                                    </Grid>
                                </ListBoxItem>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </WrapPanel>
            </Border>
            <Button
                Margin="0,10,0,0"
                Command="{Binding DeleteSubjectCommand}"
                Content="Delete Selected Subject" />

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="10">

                <!--  Update Details Button  -->
                <Button
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Command="{Binding ToggleEditModeCommand}"
                    Content="Update Details" />

                <!--  Create New Subject Section (Visible when NOT Editing)  -->
                <Grid
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsVisible="{Binding IsEditingMode, Converter={StaticResource InverseBooleanConverter}}">
                    <Border
                        Padding="20"
                        Background="LightGray"
                        CornerRadius="10">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="10">
                            <TextBlock
                                Margin="0,20,0,5"
                                HorizontalAlignment="Center"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="âž• Create a New Subject" />
                            <TextBlock
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="Green"
                                Text="{Binding CreationMessage}" />
                            <TextBox
                                Width="250"
                                HorizontalAlignment="Center"
                                Text="{Binding NewSubjectName}"
                                Watermark="Enter subject name" />
                            <TextBox
                                Width="250"
                                Height="80"
                                HorizontalAlignment="Center"
                                Text="{Binding NewSubjectDescription}"
                                Watermark="Enter subject description" />
                            <Button
                                Margin="0,5,0,0"
                                HorizontalAlignment="Center"
                                Command="{Binding CreateSubjectCommand}"
                                Content="Create" />
                        </StackPanel>
                    </Border>
                </Grid>

                <!--  Edit Details Section (Visible when Editing)  -->
                <Grid
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsVisible="{Binding IsEditingMode}">
                    <Border
                        Padding="20"
                        Background="LightGray"
                        CornerRadius="10">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="10">
                            <TextBlock
                                Margin="0,20,0,5"
                                HorizontalAlignment="Center"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="âœï¸ Edit Subject Details" />
                            <TextBlock
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="Blue"
                                Text="Update the subject details" />
                            <TextBox
                                Width="250"
                                HorizontalAlignment="Center"
                                Text="{Binding NewSubjectName}"
                                Watermark="Edit subject name" />
                            <TextBox
                                Width="250"
                                Height="80"
                                HorizontalAlignment="Center"
                                Text="{Binding NewSubjectDescription}"
                                Watermark="Edit subject description" />
                            <Button
                                Margin="0,5,0,0"
                                HorizontalAlignment="Center"
                                Command="{Binding SaveSubjectCommand}"
                                Content="Save" />
                        </StackPanel>
                    </Border>
                </Grid>

            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>